idades = []
alturas = []

for i in range (1, 6):
    print('%dÂº Pessoa' %i)
    idade = int(input('Digite sua idade: '))
    altura = float(input('Digite sua altura: '))
    idades.append(idade)
    alturas.append(altura)

print('Ordem inversa das alturas:')
print(alturas[::-1])
print('Ordem inversa das idades')
print(idades[::-1])

